<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/azul_marino"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:id="@+id/reserva_relative_1"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/reserva_text_id"
                style="@style/TextViewStyle"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="42dp"
                android:layout_toStartOf="@+id/reserva_button_ver_mas"
                android:text="Id" />

            <TextView
                android:id="@+id/reserva_text_tipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextViewStyle"
                android:text="Tipo de sala"
                android:layout_below="@id/reserva_text_id" />

            <RelativeLayout
                android:id="@+id/reserva_relative_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/reserva_text_tipo"
                tools:ignore="ExtraText">

                <TextView
                    android:id="@+id/reserva_text_nombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextViewStyle2"
                    android:text="Nombre" />

                <TextView
                    android:id="@+id/reserva_text_dni"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/reserva_text_nombre"
                    style="@style/TextViewStyle2"
                    android:text="DNI" />

                <TextView
                    android:id="@+id/reserva_text_telefono"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/reserva_text_dni"
                    style="@style/TextViewStyle2"
                    android:text="Teléfono" />

                <TextView
                    android:id="@+id/reserva_text_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/reserva_text_telefono"
                    style="@style/TextViewStyle2"
                    android:text="Email" />

                <TextView
                    android:id="@+id/reserva_text_fechaIni"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/reserva_text_email"
                    style="@style/TextViewStyle2"
                    android:text="Fecha de inicio" />

                <TextView
                    android:id="@+id/reserva_text_fechaFin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/reserva_text_fechaIni"
                    style="@style/TextViewStyle2"
                    android:text="Fecha de fin" />


                <TextView
                    android:id="@+id/reserva_text_numPersonas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/reserva_text_fechaFin"
                    style="@style/TextViewStyle2"
                    android:text="Número de personas" />

                <TextView
                    android:id="@+id/reserva_text_comentario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/reserva_text_numPersonas"
                    style="@style/TextViewStyle2"
                    android:text="Comentario" />

                <Button
                    android:id="@+id/reserva_button_edit"
                    android:layout_width="106dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/reserva_text_comentario"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="19dp"
                    android:layout_marginRight="30dp"
                    android:layout_toStartOf="@+id/reserva_button_eliminar"
                    android:backgroundTint="@color/verde_claro"
                    android:text="Editar" />

                <Button
                    android:id="@+id/reserva_button_eliminar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/reserva_text_comentario"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="97dp"
                    android:backgroundTint="@color/rojo"
                    android:text="Eliminar" />

            </RelativeLayout>

            <Button
                android:id="@+id/reserva_button_ver_mas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/reserva_relative_2"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:backgroundTint="@color/light_blue_600"
                android:textColor="@color/blanco"
                android:text="Ver más" />
        </RelativeLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>